  <h1 class="ui header">New Location</h1>

  <%= form_with(model: [@trip, @location], local: true, class: "ui form" ) do |f| %>

  <div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true, placeholder: "Location Name" %>
  </div>
  <div class="field">
  <%= f.label :days %>
  <%= f.text_field :days, required: true, placeholder: "Days"%>
  </div>
  
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>